
<% include partials/_header %>
<div class="container">
    <div class="row">
        <!--FORM-->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                        <form action="/update/<%= data.id%>" method="post">
							<h3>EDITA TU TAREA</h3>
							<div class="form-group">
								<input type="text" name="nombre" placeholder="Insert a title" class="form-control" value="<%=data.nombre%>">
							</div>

							<div class="form-group">
								<textarea name="descripcion" cols="80" class="form-control" placeholder="Insert a description" ><%=data.descripcion%></textarea>
						
							</div>

							<button type="submit" class="btn btn-primary btn-block">Actualizar</button>
                </div>
            </div>
        </div>
    </div>
</div>
   

<% include partials/_footer %>