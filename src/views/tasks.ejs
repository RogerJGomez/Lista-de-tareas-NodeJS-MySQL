
<% include partials/_header %>
<div class="container">
    <div class="row">
        <!--FORM-->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <!--Method post para mandar los datos ingresados a la BD-->
                    <form action="/add" method="post">
                        <h3>AGREGAR UNA TAREA</h3>
                        
                        <div class="form-group">
                            <input type="text" name="nombre"  placeholder="Title..." class="form-control" required>
                        </div>

                        <div class="form-group">
                            <textarea name="descripcion"  cols="80" class="form-control" placeholder="Description..." required></textarea>
                    
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">Añadir</button>



                    </form>
                                        
                </div>
            </div>
        </div>

        <!--LIST-->
        <div class="col-md-8">
            <table class="table table-bordered table-hove">
                <thead>
                    <th>Nº</th>
                    <th>Título</th>
                    <th>Descripción</th>
                    <th>Operación</th>
                </thead>

                <tbody>
                    <% if(data){ %>
                        <% for(var i =0; i < data.length; i++){%>
                            <tr>
                                <td><%=i+1%></td>
                                <td><%=data[i].nombre%></td>
                                <td><%=data[i].descripcion%></td>
                                <td>
                                        <a href="/delete/<%= data[i].id%>" class=" btn btn-danger">Eliminar</a>
                                        <a href="/update/<%= data[i].id%>" class=" btn btn-info">Editar</a>
                                </td>
                            </tr>
                        <%}%>
                    <% }%>
                </tbody>
            </table>
        </div>
    </div>
   

<% include partials/_footer %>